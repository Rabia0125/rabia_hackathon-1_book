<?xml version="1.0"?>
<!--
  Simple Humanoid Robot URDF

  A complete 15-link humanoid model for educational purposes.
  Demonstrates URDF structure including links, joints, and sensors.

  Links (15):
    - base_link (torso)
    - head
    - left_upper_arm, left_forearm, left_hand
    - right_upper_arm, right_forearm, right_hand
    - left_thigh, left_shin, left_foot
    - right_thigh, right_shin, right_foot

  Joints (14 DOF):
    - neck (1 DOF)
    - shoulders (2x2 DOF = 4)
    - elbows (2x1 DOF = 2)
    - hips (2x2 DOF = 4)
    - knees (2x1 DOF = 2)
    - ankles (2x1 DOF = 2) - simplified

  Total: 15 joints (14 revolute + 1 fixed for hands)

  Coordinate System:
    - X: Forward
    - Y: Left
    - Z: Up
-->
<robot name="simple_humanoid">

  <!-- ═══════════════════════════════════════════════════════════════ -->
  <!-- MATERIALS (Define colors for reuse)                              -->
  <!-- ═══════════════════════════════════════════════════════════════ -->

  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="skin">
    <color rgba="0.9 0.8 0.7 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.2 0.2 0.8 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.2 0.2 1.0"/>
  </material>

  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>

  <!-- ═══════════════════════════════════════════════════════════════ -->
  <!-- BASE / TORSO                                                      -->
  <!-- ═══════════════════════════════════════════════════════════════ -->

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.85" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.4"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.85" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.4"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0.85" rpy="0 0 0"/>
      <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- ═══════════════════════════════════════════════════════════════ -->
  <!-- HEAD                                                              -->
  <!-- ═══════════════════════════════════════════════════════════════ -->

  <link name="head">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="skin"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.008" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.008"/>
    </inertial>
  </link>

  <joint name="neck_pitch" type="revolute">
    <parent link="base_link"/>
    <child link="head"/>
    <origin xyz="0 0 1.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="20" velocity="1.5"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <!-- ═══════════════════════════════════════════════════════════════ -->
  <!-- LEFT ARM                                                          -->
  <!-- ═══════════════════════════════════════════════════════════════ -->

  <!-- Left Upper Arm -->
  <link name="left_upper_arm">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.25" radius="0.035"/>
      </geometry>
      <material name="skin"/>
